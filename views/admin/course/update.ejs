<%- include('../partials/header') %>
        <!-- Container Fluid-->
        <div class="container-fluid" id="container-wrapper">
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Update Course</h1>
          </div>

          <div class="row">
            <div class="col-lg-12">
              <!-- Add Course -->
              <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                  <h6 class="m-0 font-weight-bold text-primary">Update <%- course.name %></h6>
                </div>
                <div class="card-body">
                  <form action="/admin/course/<%- course._id %>/edit?_method=PUT" method="POST">
                    <div class="form-group">
                      <label for="exampleInputName1">Course Name</label>
                      <input type="text" class="form-control" id="exampleInputName1" aria-describedby="nameHelp" value="<%- course.name %>" name="name">
                    </div>
                    <div class="form-group">
                      <label for="exampleAbbr">Course Abbreviation</label>
                      <input type="text" class="form-control" id="exampleAbbr" aria-describedby="abbrHelp" value="<%- course.abbr %>" name="abbr">
                    </div>
                    <div class="form-group">
                      <label for="exampleCourseCode">Course Code</label>
                      <input type="number" class="form-control" id="exampleCourseCode" aria-describedby="courseCodeHelp" value="<%- course.courseCode %>" name="courseCode">
                    </div>
                    <div class="form-group">
                      <label for="exampleCreditHour">Course Credit Hour</label>
                      <input type="number" class="form-control" id="exampleAbbr" aria-describedby="creditHourHelp" value="<%- course.creditHour %>" name="creditHour">
                    </div>
                    <select class="form-control form-control-md  mb-3" name="semester">
                      <option disabled selected><%- course.semester %></option>
                      <option value="First Semester">First Semester</option>
                      <option value="Second Semester">Second Semester</option>
                    </select>

                    <div class="form-group">
                      <label for="exampleLecturer">Lecturer</label>
                        <input type="text" class="form-control" id="exampleLecturer" aria-describedby="lecturer" value="<%- course.lecturer %>" name="lecturer">
                    </div>

                    <select class="form-control form-control-md  mb-3" name="program">
                      <option selected><%- course.program %></option>
                      <% programs.forEach((program) => { %>
                        <% if(program.name !== course.program) { %>
                          <option value="<%-program.type%> <%- program.name %>>"><%-program.type%> <%- program.name %></option>
                        <% } %>
                      <% }); %>
                    </select>
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <!--Row-->
<%- include ('../partials/footer') %>
